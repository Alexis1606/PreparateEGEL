<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calejo.preparateegel.examenCompletoScroll"
    tools:showIn="@layout/activity_examen_completo_scroll"
    android:backgroundTint="@color/rojoUVM"
    android:background="@color/rojoUVM">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/rojoUVM"
        android:background="@color/rojoUVM">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tPregunta"
        android:layout_alignLeft="@+id/tPregunta"
        android:layout_alignStart="@+id/tPregunta"
        android:id="@+id/rg">


        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rR1"
            android:layout_marginTop="28dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rR2"
            android:layout_below="@+id/rR1"
            android:layout_alignLeft="@+id/rR1"
            android:layout_alignStart="@+id/rR1"
            android:layout_marginTop="28dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rR2"
            android:layout_alignRight="@+id/rR2"
            android:layout_alignEnd="@+id/rR2"
            android:layout_marginTop="32dp"
            android:id="@+id/rR3"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rR3"
            android:layout_alignLeft="@+id/rR3"
            android:layout_alignStart="@+id/rR3"
            android:layout_marginTop="30dp"
            android:id="@+id/rR4"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/rg"
            android:layout_alignStart="@+id/rg"
            android:id="@+id/rR5" />


    </RadioGroup>

        <Button
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rg"
            android:id="@+id/bNext"
            tools:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:onClick="siguiente" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:id="@+id/tPregunta"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

